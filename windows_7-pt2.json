        "pause_before": "30s"
    }, {
        "type": "windows-restart",
        "restart_timeout": "10m",
        "pause_before": "2m"
    }, {
        "type": "powershell",
        "elevated_user": "vagrant",
        "elevated_password": "vagrant",
        "inline": "cmd.exe /c C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe -File a:\\win-updates.ps1 -MaxUpdatesPerCycle 40 -RestartRequired 1",
        "pause_before": "30s"
    }, {
        "type": "windows-restart",
        "restart_timeout": "10m",
        "pause_before": "2m"
    }, {
        "type": "powershell",
        "elevated_user": "vagrant",
        "elevated_password": "vagrant",
        "inline": "cmd.exe /c C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe -File a:\\win-updates.ps1 -MaxUpdatesPerCycle 40 -RestartRequired 1",
        "pause_before": "30s"
