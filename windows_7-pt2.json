        "elevated_user": "vagrant",
        "elevated_password": "vagrant",
        "inline": "cmd.exe /c C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe -File a:\\win-updates.ps1 -MaxUpdatesPerCycle 40 -RestartRequired 1",
        "pause_before": "30s"
    }, {
        "type": "windows-restart",
        "restart_timeout": "10m",
        "pause_before": "2m"
    }],
    "post-processors": [{
        "type": "vagrant",
        "keep_input_artifact": true,
        "output": "{{user `os_name`}}-{{ user `image_name`}}.box",
        "vagrantfile_template": "vagrantfile-windows_7.template"
    }],
    "variables": {
        "os_name": "",
        "headless": "true",
        "source_path": "",
        "image_name": "updated"
    }
}
