{
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": true,
      "boot_wait": "2m",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "12h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "{{user `guest_os_type`}}",
      "disk_size": 40000,
      "hard_drive_nonrotational": true,
      "hard_drive_Discard": true,
      "guest_additions_mode": "attach",
      "floppy_files": [
        "./answer_files/7-ent-sp1/{{user `autounattend`}}/Autounattend.xml",
        "./scripts/dis-updates.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/win-updates.ps1",
        "./answer_files/7-ent-sp1/configure.bat",
        "./answer_files/7-ent-sp1/firewall-disable.bat",
        "./answer_files/7-ent-sp1/fixnetwork.ps1",
        "./answer_files/7-ent-sp1/hotfix-KB3020369.ps1",
        "./answer_files/7-ent-sp1/hotfix-KB3102810.ps1",
        "./answer_files/7-ent-sp1/hotfix-KB3125574.ps1",
        "./answer_files/7-ent-sp1/install-winrm.cmd",
        "./answer_files/7-ent-sp1/zz-start-sshd.cmd"
      ],
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "8192"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "4"
        ]
      ]
    }
  ],
  "provisioners": [{
      "type": "powershell",
      "script": "scripts/install_oracle_guest_additions.ps1",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "environment_vars": [
          "install_vbox_tools=true"
      ]
  },
    {
      "type": "windows-shell",
      "scripts": [
        "./scripts/disable-auto-logon.bat",
        "./scripts/enable-rdp.bat",
        "./scripts/disable-rdp-allow-list.bat"
      ]
    }, {
        "elevated_password": "vagrant",
        "elevated_user": "vagrant",
        "script": "scripts/clean_and_scrub.ps1",
        "type": "powershell",
        "valid_exit_codes": [
            0,
            1,
            2,
            3,
            5,
            10,
            15
        ]
    }, {
        "script": "scripts/{{user `compact`}}",
        "type": "windows-shell"
    },
    {
        "type": "windows-restart",
        "restart_timeout": "10m",
        "pause_before": "2m"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "win7_ent_{{.Provider}}.box",
      "vagrantfile_template": "vagrantfile-windows_7.template"
    }
  ],
  "variables": {
    "iso_url": "http://care.dlservice.microsoft.com/dl/download/evalx/win7/x64/EN/7600.16385.090713-1255_x64fre_enterprise_en-us_EVAL_Eval_Enterprise-GRMCENXEVAL_EN_DVD.iso",
    "iso_checksum_type": "md5",
    "iso_checksum": "1d0d239a252cb53e466d39e752b17c28",
    "autounattend": "./answer_files/7-ent-sp1/Autounattend.xml",
    "guest_os_type": "Windows7_64",
    "autounattend": "amd64",
    "compact": "compact.bat"
  }
}
